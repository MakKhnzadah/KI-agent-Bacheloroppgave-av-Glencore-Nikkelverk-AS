# Choose provider: "openai" or "azure"
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-10-01-preview

# Vector DB / embeddings (optional)
# Vector DB provider: "none" | "chroma"
VECTOR_PROVIDER=none
VECTOR_COLLECTION=kb
VECTOR_DIR=data/vectorstore

# Embeddings provider (defaults to LLM_PROVIDER if empty)
EMBEDDING_PROVIDER=

# OpenAI-compatible embeddings
OPENAI_BASE_URL=https://api.openai.com
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI embeddings
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=

# Paths
KB_RAW_DIR=knowledge_base/raw
KB_HTML_DIR=knowledge_base/html
DATA_DIR=data
